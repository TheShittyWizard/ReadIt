<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/editImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="20dp" />

    <Button
        android:text="Manual Definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manualDefinition"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="Full Recognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullRecognition"
        android:layout_above="@+id/manualDefinition"
        android:layout_alignStart="@+id/manualDefinition"
        android:layout_alignEnd="@+id/manualDefinition" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerLanguage"
        android:textAlignment="center"
        android:layout_alignTop="@+id/fullRecognition"
        android:layout_toStartOf="@+id/fullRecognition" />

    <TextView
        android:text="Language:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="17sp"
        android:layout_alignTop="@+id/spinnerLanguage"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/spinnerLanguage"
        android:textAlignment="textEnd" />

</RelativeLayout>